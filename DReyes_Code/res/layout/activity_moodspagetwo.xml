<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Baby Seems (2/2)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
		    <ImageButton
		        android:id="@+id/weepyButton"
		        android:layout_width="160dp"
		        android:layout_height="115dp"
		        android:src="@drawable/weepyimagebutton" />
		
		    <ImageButton
		        android:id="@+id/imageButton2"
		        android:layout_width="160dp"
		        android:layout_height="115dp"
		        android:src="@drawable/calmimagebutton" />
    	</LinearLayout>
    	
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
		    <ImageButton
		        android:id="@+id/imageButton1"
		        android:layout_width="160dp"
		        android:layout_height="115dp"
		        android:src="@drawable/happyimagebutton" />
		
		    <ImageButton
		        android:id="@+id/imageButton2"
		        android:layout_width="160dp"
		        android:layout_height="115dp"
		        android:src="@drawable/hungryimagebutton" />
    	</LinearLayout>
    	
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
		    <ImageButton
		        android:id="@+id/imageButton1"
		        android:layout_width="160dp"
		        android:layout_height="115dp"
		        android:src="@drawable/sickimagebutton" />
		
		    <ImageButton
		        android:id="@+id/imageButton2"
		        android:layout_width="160dp"
		        android:layout_height="115dp"
		        android:src="@drawable/sleepyimagebutton" />
    	</LinearLayout>
    
    </LinearLayout>

</LinearLayout>
